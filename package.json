{
  "name": "hatenablogger",
	"displayName": "hatenablogger",
    "license": "MIT",
    "description": "Post an entry to hatenablog via vscode",
    "version": "0.1.10",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:hatenablogger.helloWorld"
	],
	"main": "./out/extension.js",
    "contributes": {
      "commands": [
        {
          "command": "extension.postOrUpdate",
          "title": "Hatenablogger: Post or Update"
        },
        {
          "command": "extension.uploadImage",
          "title": "Hatenablogger: Upload Image"
        }
      ],
      "configuration": {
        "title": "Hatenablogger configuration",
        "properties": {
          "hatenablogger.hatenaId": {
            "type": "string"
          },
          "hatenablogger.blogId": {
            "type": "string"
          },
          "hatenablogger.apiKey": {
            "type": "string"
          },
          "hatenablogger.fotolifeFolder": {
            "type": "string",
            "default": "Hatena Blog"
          }
        }
      }
    },
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "14.14.3",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
        "@types/xml2js": "^0.4.3",
        "all-contributors-cli": "^6.3.1",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
      "axios": "^0.18.1",
      "hatena-fotolife-api": "^1.0.0",
      "wsse": "^2.4.0",
      "xml2js": "^0.4.19"
    }
}

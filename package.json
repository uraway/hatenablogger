{
  "name": "hatenablogger",
  "displayName": "hatenablogger",
  "publisher": "uraway",
  "license": "MIT",
  "description": "Post an entry to hatenablog via vscode",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/uraway/hatenablogger.git"
  },
  "bugs": {
    "url": "https://github.com/uraway/hatenablogger/issues"
  },
  "version": "0.3.4",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.postOrUpdate",
    "onCommand:extension.uploadImage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.postOrUpdate",
        "title": "Post or Update",
        "category": "Hatenablogger"
      },
      {
        "command": "extension.uploadImage",
        "title": "Upload Image",
        "category": "Hatenablogger"
      }
    ],
    "configuration": {
      "title": "Hatenablogger configuration",
      "properties": {
        "hatenablogger.hatenaId": {
          "type": "string"
        },
        "hatenablogger.blogId": {
          "type": "string"
        },
        "hatenablogger.apiKey": {
          "type": "string"
        },
        "hatenablogger.fotolifeFolder": {
          "type": "string",
          "default": "Hatena Blog"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "NODE_ENV=production yarn compile",
    "compile": "tsc -p ./",
    "publish": "vsce publish --yarn",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn compile",
    "test": "node ./out/test/runTest.js",
    "contributors:add": "all-contributors add",
    "lint": "npm-run-all -p lint:*",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "lint:type": "tsc -p ./ --noEmit",
    "lint:prettier": "prettier -c src",
    "contributors:generate": "all-contributors generate",
    "ui-test": "yarn compile && extest setup-and-run out/ui-test/*.js -o settings.json -u --mocha_config src/ui-test/.mocharc-debug.js --install_dependencies "
  },
  "devDependencies": {
    "@nut-tree/nut-js": "1.6.0",
    "@types/axios": "0.14.0",
    "@types/chai": "4.2.15",
    "@types/fs-extra": "9.0.8",
    "@types/glob": "7.1.3",
    "@types/mocha": "8.2.1",
    "@types/node": "14.14.22",
    "@types/sinon": "^9.0.11",
    "@types/vscode": "^1.54.0",
    "@types/xml2js": "0.4.8",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "all-contributors-cli": "6.19.0",
    "chai": "4.3.3",
    "clipboardy": "2.3.0",
    "eslint": "7.18.0",
    "fs-extra": "9.1.0",
    "glob": "7.1.6",
    "mocha": "8.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "typescript": "4.1.3",
    "vscode-extension-tester": "4.0.3",
    "vscode-extension-tester-native": "3.0.2",
    "vscode-test": "1.4.1"
  },
  "dependencies": {
    "axios": "0.21.1",
    "hatena-fotolife-api": "2.0.0",
    "wsse": "5.1.0",
    "xml2js": "^0.4.19"
  }
}
